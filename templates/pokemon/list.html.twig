{% extends 'base.html.twig' %}

{% block title %}Liste des Pokémon{% endblock %}

{% block body %}

    <div class="text-center mb-5">
        <img src="{{ asset('images/pokemon.png') }}" alt="Logo Pokémon" class="img-fluid" style="max-width: 400px;">

    </div>
    <div class="container mt-5">

        <h1 class="text-center mb-5">Liste des Pokémons</h1>

        <div class="card p-4" style="background-color: white;">
            <ul class="list-group">
                {% for pokemon in pokemons %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>{{ pokemon.name }} - Type : {{ pokemon.type }}</span>
                        <div>
                            <a href="{{ path('pokemon_edit', { id: pokemon.id }) }}" class="btn btn-outline-primary btn-sm">Modifier</a>
                            <a href="{{ path('pokemon_delete', { id: pokemon.id }) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce Pokémon ?');" class="btn btn-danger btn-sm">Supprimer</a>
                        </div>
                    </li>
                {% else %}
                    <li class="list-group-item">Aucun Pokémon trouvé.</li>
                {% endfor %}
            </ul>
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_pokemon') }}" class="btn btn-primary">Ajouter un nouveau Pokémon</a>
        </div>
    </div>
{% endblock %}
